<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Widget de Comparaison A/B</title>
    
    <style>
        /* CSS: Style pour l'intégration Wix */
        body {
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: transparent; /* Fond transparent pour se fondre dans la page Wix */
            margin: 0;
            padding: 20px;
            box-sizing: border-box;
            overflow: hidden; /* Empêche les barres de défilement de l'iFrame */
        }
        .widget-container {
            width: 100%;
            max-width: 350px;
            padding: 15px;
            border-radius: 8px;
            text-align: center;
            background-color: #f9f9f9;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }
        #toggleButton {
            background-color: #007bff;
            color: white;
            border: none;
            padding: 10px 20px;
            margin-top: 15px;
            border-radius: 5px;
            cursor: pointer;
            font-size: 1em;
            transition: background-color 0.3s;
        }
        #toggleButton:hover {
            background-color: #0056b3;
        }
        #statusText {
            margin-top: 10px;
            font-weight: bold;
            color: #333;
            min-height: 20px; /* Pour éviter le saut lors du changement de texte */
        }
        #mainPlayer {
            width: 100%;
            margin-top: 15px;
        }
    </style>
</head>
<body>

<div class="widget-container">
    <h2>Comparaison Avant/Après</h2>
    
    <div id="audio-controls">
        
        <audio id="mainPlayer" controls preload="auto"></audio>
        
        <button id="toggleButton">Comparer (Mixé)</button>
        
        <p id="statusText">Statut : Initialisation...</p>
    </div>
</div>

<script>
    // JavaScript: Logique de Synchronisation par API Audio
    
    // --- 1. RÉCUPÉRATION DES PARAMÈTRES D'URL ---
    const params = new URLSearchParams(window.location.search);
    const UNMIXED_URL = params.get('unmixed');
    const MIXED_URL = params.get('mixed');

    // --- 2. VÉRIFICATION ET ÉLÉMENTS DU DOM ---
    const mainPlayer = document.getElementById('mainPlayer');
    const toggleButton = document.getElementById('toggleButton');
    const statusText = document.getElementById('statusText');

    if (!UNMIXED_URL || !MIXED_URL) {
        statusText.textContent = "Erreur: URLs manquantes. Vérifiez le lien d'intégration Wix.";
        toggleButton.disabled = true;
        return; // Arrêter l'exécution
    }

    // --- 3. VARIABLES D'ÉTAT ET CRÉATION DES OBJETS AUDIO VIRTUELS ---
    let isMixed = false; // False = Non Mixé est actif
    
    // Créer les objets audio virtuels (non visibles) pour le contrôle précis
    const trackUnmixed = new Audio(UNMIXED_URL);
    const trackMixed = new Audio(MIXED_URL);

    // Initialisation des volumes et de la source visible
    trackUnmixed.volume = 1; 
    trackMixed.volume = 0;   // La piste inactive est silencieuse
    mainPlayer.src = UNMIXED_URL;
    statusText.textContent = "Statut : NON MIXÉ";


    // --- 4. GESTION DE LA LECTURE PRINCIPALE (SYNCHRONISATION) ---
    mainPlayer.onplay = () => {
        // Lancer les deux pistes virtuelles au même point que le lecteur visible
        const currentTime = mainPlayer.currentTime;
        
        if (isMixed) {
            trackMixed.currentTime = currentTime;
            trackMixed.play();
        } else {
            trackUnmixed.currentTime = currentTime;
            trackUnmixed.play();
        }
    };

    mainPlayer.onpause = () => {
        // Mettre en pause les deux pistes virtuelles
        trackUnmixed.pause();
        trackMixed.pause();
    };

    mainPlayer.onseeking = () => {
        // Si l'utilisateur change la position sur la barre visible, synchroniser
        const currentTime = mainPlayer.currentTime;
        if (isMixed) {
             trackUnmixed.currentTime = currentTime;
        } else {
             trackMixed.currentTime = currentTime;
        }
    };

    // Mettre à jour la barre de temps visible avec la position de la piste active
    setInterval(() => {
        if (!mainPlayer.paused) {
            if (isMixed) {
                mainPlayer.currentTime = trackMixed.currentTime;
            } else {
                mainPlayer.currentTime = trackUnmixed.currentTime;
            }
        }
    }, 100);


    // --- 5. FONCTION DE BASCULE A/B ---
    function toggleAudio() {
        if (mainPlayer.paused) {
            // Si le lecteur est en pause, on bascule l'état (prêt pour la prochaine lecture)
            isMixed = !isMixed;
        } else {
            // Lecture en cours : Bascule A/B instantanée
            isMixed = !isMixed;

            if (isMixed) {
                // Basculer vers MIXÉ
                trackUnmixed.volume = 0; // Silencieux
                trackMixed.volume = 1;   // Audible
                
                // Assurer la synchronisation et la lecture
                trackMixed.currentTime = trackUnmixed.currentTime;

                statusText.textContent = "Statut : MIXÉ";
                toggleButton.textContent = "Comparer (Non Mixé)";

            } else {
                // Basculer vers NON MIXÉ
                trackMixed.volume = 0;   // Silencieux
                trackUnmixed.volume = 1; // Audible

                // Assurer la synchronisation et la lecture
                trackUnmixed.currentTime = trackMixed.currentTime;
                
                statusText.textContent = "Statut : NON MIXÉ";
                toggleButton.textContent = "Comparer (Mixé)";
            }
        }
        
        // Mettre à jour la source visible pour le bon affichage de la barre de progression/durée
        mainPlayer.src = isMixed ? MIXED_URL : UNMIXED_URL;
    }

    // --- 6. ÉVÉNEMENT ---
    toggleButton.addEventListener('click', toggleAudio);

</script>
</body>
</html>
